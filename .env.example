# Grounding backend: "local" (HuggingFace transformers on GPU) | "vllm" (local vLLM server)
GROUNDING_BACKEND=local

# Model name (change to UGround-V1-7B if you have more VRAM)
UGROUND_MODEL=osunlp/UGround-V1-2B

# Screen resolution (must match your actual desktop)
SCREEN_WIDTH=1920
SCREEN_HEIGHT=1080

# vLLM server URL (only needed when GROUNDING_BACKEND=vllm)
VLLM_URL=http://localhost:8000/v1
VLLM_API_KEY=token-abc123

# Where to save the .txt files (default: Desktop/tjm-project)
# TARGET_DIR=C:\Users\YourName\Desktop\tjm-project

# Save annotated screenshots for debugging
ANNOTATE_SCREENSHOTS=true

# Retry settings
GROUNDING_MAX_RETRIES=3
GROUNDING_RETRY_DELAY=1.0

# Notepad launch timeout (seconds)
NOTEPAD_LAUNCH_TIMEOUT=15

POSTS_API_URL=https://dummyjson.com/posts
POSTS_COUNT=10
